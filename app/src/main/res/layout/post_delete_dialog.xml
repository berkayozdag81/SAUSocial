<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewDeletePost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/text_bold"
        android:text="Gönderi siliniyor"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewAreYouSure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/text_regular"
        android:text="Gönderiyi silmek istediğinizden emin misiniz?"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/textViewDeletePost" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="end"
        app:layout_constraintTop_toBottomOf="@id/textViewAreYouSure">

        <TextView
            android:id="@+id/buttonSignOutCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/text_regular"
            android:text="Hayır"
            android:textAllCaps="true"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/buttonSignOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/text_regular"
            android:text="Evet"
            android:textAllCaps="true"
            android:textColor="@color/black" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>