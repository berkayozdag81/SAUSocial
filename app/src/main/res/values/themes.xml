<resources>

    <!-- Base application theme. -->
    <style name="Theme.SAUSocial" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/main_color</item>
    </style>

    <!-- Bottom Navigation-->
    <style name="BottomNavigationView">
        <item name="fontFamily">@font/text_bold</item>
    </style>

    <!-- Tab Item Text-->
    <style name="TabItemTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/text_regular</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- Post Detail Follow Button-->
    <style name="PostDetailFollowButton">
        <item name="fontFamily">@font/text_bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Post Detail Comment Edit Text-->
    <style name="PostDetailCommentEditText">
        <item name="fontFamily">@font/text_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>